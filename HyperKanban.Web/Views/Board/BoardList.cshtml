@model IEnumerable<HyperKanban.Web.Models.Domain.Board>

@{
    ViewData["Title"] = "Board Listing";
}

<h1>Board Listing</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Created Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var board in Model)
        {
            <tr>
                <td>@board.Name</td>
                <td>@board.Description</td>
                <td>@board.CreatedDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>